<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.oop.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	 <servlet>
    	<servlet-name>customerinsert</servlet-name>
    	<servlet-class>com.oop.servlet.CustomerInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>customerinsert</servlet-name>
    	<url-pattern>/insert</url-pattern>
    </servlet-mapping>
    
    <servlet>
		<servlet-name>updatecustomer</servlet-name>
		<servlet-class>com.oop.servlet.UpdateCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updatecustomer</servlet-name>
		<url-pattern>/update</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>deletecustomer</servlet-name>
		<servlet-class>com.oop.servlet.DeleteCustomerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletecustomer</servlet-name>
		<url-pattern>/delete</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>librarylogin</servlet-name>
		<servlet-class>com.oop.servlet.LibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>librarylogin</servlet-name>
		<url-pattern>/library</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>checkout</servlet-name>
		<servlet-class>com.oop.servlet.ShippingInsert</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>checkout</servlet-name>
		<url-pattern>/shipping</url-pattern>
	</servlet-mapping>
	
	 <servlet>
		<servlet-name>updatelibrary</servlet-name>
		<servlet-class>com.oop.servlet.UpdateLibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updatelibrary</servlet-name>
		<url-pattern>/updatelib</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deletelibrary</servlet-name>
		<servlet-class>com.oop.servlet.DeleteLibraryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletelibrary</servlet-name>
		<url-pattern>/deletelib</url-pattern>
	</servlet-mapping>
	
	
	
	
	
	<servlet>
		<servlet-name>subscriptionlogin</servlet-name>
		<servlet-class>com.oop.servlet.SubscriptionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>subscriptionlogin</servlet-name>
		<url-pattern>/subscription</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
    	<servlet-name>subscription</servlet-name>
    	<servlet-class>com.oop.servlet.SubscriptionInsert</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>subscription</servlet-name>
    	<url-pattern>/insertsub</url-pattern>
    </servlet-mapping>
    
    
    <servlet>
		<servlet-name>deletesubscription</servlet-name>
		<servlet-class>com.oop.servlet.DeleteSubscriptionServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deletesubscription</servlet-name>
		<url-pattern>/deletesub</url-pattern>
	</servlet-mapping>
	
	
</web-app>